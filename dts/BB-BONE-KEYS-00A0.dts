/dts-v1/;
/plugin/;

/{
	compatible = "ti,beaglebone-black";
	
	/* identification */
	part-number = "BB-BONE-KEYS";
	version = "00A0";

	fragment@0 {
		target = <&am33xx_pinmux>;
		__overlay__ {
			pushbutton_pins: pinmux_pushbutton_pins {
				pinctrl-single,pins = <
					0x078 0x37 // P9_12 pull-up mode 7 GPIO1_28
					0x040 0x37 // P9_15 pull-up mode 7 GPIO1_16
					0x044 0x37 // P9_23 pull-up mode 7 GPIO1_17
				>;
			};
		};
	};
	
	fragment@1 {
		target = <&ocp>;
		__overlay__ {
			/* avoid warnings */
			#address-cells = <1>;
			#size-cells	= <1>;
			
			gpio_keys {
				compatible = "gpio-keys";
				pinctrl-names = "default";
				pinctrl-0 = <&pushbutton_pins>;
				#address-cells = <1>;
				#size-cells	= <0>;
				
				button@1 {
					debounce_interval = <50>;
					linux,code = <28>;
					label = "enter";
					gpios = <&gpio2 60 0x1>;
					gpio-key,wakeup;
					autorepeat;
				};
				button@2 {
					debounce_interval = <50>;
					linux,code = <105>;
					label = "left";
					gpios = <&gpio2 16 0x1>;
					gpio-key,wakeup;
					autorepeat;
				};
				button@3 {
					debounce_interval = <50>;
					linux,code = <106>;
					label = "right";
					gpios = <&gpio2 17 0x1>;
					gpio-key,wakeup;
					autorepeat;
				};
			};
		};
	};
};
